{
  "name": "@amzn/amazon-connect-salesforce-scc-lambda",
  "version": "1.0.0",
  "homepage": "https://code.amazon.com/packages/AmazonConnectSalesforceSCCLambda",
  "repository": "ssh://git.amazon.com/pkg/AmazonConnectSalesforceSCCLambda",
  "license": "UNLICENSED",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist/",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "tsc && npm run copy-config && npm run build-lambda && npm run build-lambda-layer",
    "build-lambda": "npm run copy-src && npm run zip-release",
    "build-lambda-layer": "npm run copy-dependencies && npm run zip-release-layer",
    "clean": "rm -rf build/* && rm -rf dist",
    "copy-config": "cp -r configuration/aws_lambda build",
    "copy-dependencies": "(cd build && mkdir -p AmazonConnectSalesforceSCCLambdaLayerRelease/nodejs/) && cp package*.json build/AmazonConnectSalesforceSCCLambdaLayerRelease/nodejs/ && (cd build/AmazonConnectSalesforceSCCLambdaLayerRelease/nodejs && $BRAZIL_BUILD_HOME/bin/brazil-build install --omit=dev)",
    "copy-src": "(cd build && mkdir -p AmazonConnectSalesforceSCCLambdaRelease/) && cp -r dist/* build/AmazonConnectSalesforceSCCLambdaRelease",
    "prepublishOnly": "npm run build && npm run test",
    "prettier-format": "prettier --config .prettierrc '{src,test}/**/*.ts' --write",
    "release": "npm run clean && npm run build && npm run prettier-format",
    "test": "jest --collectCoverage --collectCoverageFrom=src/**/*.{ts,js}",
    "posttest": "generate-coverage-data --language typescript",
    "test:silent": "jest --collectCoverage=false",
    "watch": "tsc -w",
    "zip-release": "(cd build/AmazonConnectSalesforceSCCLambdaRelease && zip -rmu AmazonConnectSalesforceSCCLambda.zip ./*)",
    "zip-release-layer": "(cd build/AmazonConnectSalesforceSCCLambdaLayerRelease && zip -rmu AmazonConnectSalesforceSCCLambdaLayer.zip ./*)"
  },
  "dependencies": {
    "@amzn/amazon-connect-messaging-data-converter": "*",
    "@amzn/async-utils": "*",
    "@aws-sdk/client-connect": "^3.590.0",
    "@aws-sdk/client-kinesis": "^3.591.0",
    "@aws-sdk/client-lambda": "^3.591.0",
    "@aws-sdk/client-s3": "^3.591.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/util-arn-parser": "^3.568.0",
    "@jsforce/jsforce-node": "^3.4.1",
    "axios": "^1.12.0",
    "bcryptjs": "^2.4.3",
    "form-data": "^4.0.4",
    "fast-xml-parser": "^4.4.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@amzn/brazil": "^2.0.6",
    "@tsconfig/node18": "^18.2.4",
    "@types/aws-lambda": "^8.10.138",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^9.0.8",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "~5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "npm-pretty-much": {
    "appName": "AmazonConnectSalesforceSCCLambda",
    "runRelease": "always"
  }
}
